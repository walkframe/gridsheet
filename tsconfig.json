{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2015", "dom"],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "src/stories", "*.stories.tsx", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
