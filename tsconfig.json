{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2015", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "storybook", "dist", "e2e"],
  "include": ["**/*.ts", "**/*.tsx"],
  "paths": {
    "@gridsheet/react-core": ["./src"]
  }
}
