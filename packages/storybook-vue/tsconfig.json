{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"],
    "paths": {
      "@gridsheet/vue-core": ["../vue-core/src"]
    }
  },
  "include": [
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "stories/**/*.vue",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ]
} 