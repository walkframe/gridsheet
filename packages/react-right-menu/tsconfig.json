{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@gridsheet/react-core": ["../react-core/src"],
      "@gridsheet/react-right-menu": ["./"]
    }
  },
  "exclude": ["node_modules", "storybook", "dist", "e2e"],
  "include": ["**/*.ts", "**/*.tsx"]
}
