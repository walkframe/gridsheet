{
  "name": "@gridsheet/preact-core",
  "version": "0.1.0",
  "description": "Spreadsheet component for Preact",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "copy-types": "cp -R ../react-core/dist/types/* ./dist/",
    "append-preact": "echo '\nexport { h, render } from \"preact\";' >> dist/index.d.ts",
    "build": "rm -rf ./dist || true && vite build && pnpm copy-types && pnpm append-preact"
  },
  "peerDependencies": {
    "dayjs": "^1.11.13",
    "preact": "^10.26.6"
  },
  "devDependencies": {
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vite-plugin-dts": "^4.5.3",
    "@preact/preset-vite": "^2.10.1"
  },
  "author": "righ",
  "license": "Apache-2.0"
}
