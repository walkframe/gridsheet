{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "storybook-static", "dist", "e2e"],
  "include": ["**/*.ts", "**/*.tsx", ".storybook/**/*"],
  "ts-node": {
    "esm": true
  },
  "paths": {
    "@gridsheet/react-core": ["../react-core/src"],
    "@gridsheet/react-right-menu": ["../react-right-menu"],
    "@gridsheet/preact-core": ["../preact-core"],
  }
}
